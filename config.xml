<?xml version='1.0' encoding='utf-8'?>
<widget id="com.robin.baseapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" 
xmlns:gap   = "http://phonegap.com/ns/1.0"
xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>BaseApp</name>
    <description>
        A base application.
    </description>
    <author email="dev@cordova.apache.org" href="http://phonegap.com">
        R Team
    </author>
    <content src="index.html" />
    
    <!-- <preference name="permissions" value="none"/> -->

    <!-- to enable individual permissions use the following examples -->
    <!-- <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/> -->
 	   
	
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
    <gap:plugin name="io.litehelpers.cordova.sqlite" version="0.7.10" />
	<gap:plugin name="org.apache.cordova.camera" source="pgb" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>